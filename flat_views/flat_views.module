/**
 * Custom submit handler to process facet values.
 */
function flat_views_facet_submit($form, FormStateInterface $form_state) {
    // Capture the selected facets.
    $facet_values = [];
    foreach ($form['facets'] as $facet_name => $facet) {
        foreach ($facet['#options'] as $value => $option) {
            $facet_values[$facet_name][$value] = [
                'include' => !empty($option['include']),
                'exclude' => !empty($option['exclude']),
            ];
        }
    }

    // Save or pass these values to your custom query processor.
    // This would typically involve setting them in the state or a session.
    \Drupal::service('session')->set('custom_facets_values', $facet_values);
}

/**
 * Implements hook_preprocess_views_view().
 */
function flat_views_preprocess_views_view(&$variables) {
    dpm($variables['view']->id());
    // Check if it's the view and display you want to alter.
    if ($variables['view']->id() == 'your_view_machine_name' && $variables['view']->current_display == 'your_block_display_id') {
      // Alter the facets here.
      // Inspect the $variables array using Devel or print it out to find the correct structure.

      $facets = &$variables['rows']; // The exact structure may vary based on your setup.

      foreach ($facets as &$facet) {
        // Add your plus/minus signs or any other alterations.
        $facet['sign'] = '<span class="facet-sign">+</span>'; // Adjust logic for inclusive/exclusive search.
      }
    }
  }


/**
 * Implements hook_preprocess_HOOK() for block templates.
 */
function flat_views_preprocess_block(&$variables) {
    dpm($variables['elements']['#id']);
    if ($variables['elements']['#id'] == 'tla_bootstrap_sass_flatfacetsblock') { // Replace with your block's machine name.
        // Alter the output of the facets.
        // You can inspect the block content using `dpm()` (if Devel is installed) to see the structure.
        $facets = &$variables['content']['#items'];

        // Example of adding plus/minus logic.
        foreach ($facets as &$facet) {
          // You can modify the $facet array to add your + / - buttons.
          // Example:
          $facet['sign'] = '<span class="facet-sign">+</span>'; // Modify to add actual logic for plus/minus.
        }
      }
    // Add custom library for JS and CSS.
    $variables['#attached']['library'][] = 'flat_views/flat_views';
}

