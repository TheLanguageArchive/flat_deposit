/**
 * Implements hook_block_info().
 */
function flat_views_block_info()
{
    $blocks = array();


    $blocks['reports_actions'] = array(
        'info' => t('FLAT deposit reports actions '),
        'status' => TRUE,
        'weight' => 999,
        'region' => 'content',
