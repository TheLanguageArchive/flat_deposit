/**
 * Recursive function to add Bootstrap CSS classes to input elements of type "submit".
 */
function flat_deposit_add_css_to_button_recursive(&$element)
{
    if (!is_array($element)) {
        return;
    }

    if (isset($element['#type']) && $element['#type'] == 'button') {
        // Add CSS classes to the "attributes" array of the input element.
        $element['#attributes']['class'][] = 'btn';
        if (str_starts_with($element['#value'], 'Add')) {
            $element['#attributes']['class'][] = 'btn-success';
        }
        if (str_starts_with($element['#value'], 'Remove')) {
            $element['#attributes']['class'][] = 'btn-danger';
        }
    }

    // Recursively traverse the form array.
    foreach ($element as $key => $child_element) {
        if (is_array($child_element)) {
            flat_deposit_add_css_to_button_recursive($element[$key]);
        }
    }
}

