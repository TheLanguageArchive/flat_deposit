        ->condition('type', 'flat_bundle')
        ->condition('flat_original_path.value', $original_path, '=');

    $results = $query->execute();
    if (empty(!$results)) {

        $form_state->setErrorByName('flat_original_path', t('Specified path for resources is already in use'));
